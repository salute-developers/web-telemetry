{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "strict": true,
    "noImplicitOverride": true,

    "module": "NodeNext",
    "outDir": "lib",
    "sourceMap": true,

    "declaration": true,

    "lib": ["es2022", "dom", "dom.iterable"]
  },
  "include": ["src"]
}
